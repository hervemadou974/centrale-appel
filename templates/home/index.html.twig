{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-style.css') }}> {# Inclure Bootstrap #}

{% endblock %}

{% block body %}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Bienvenue {{ app.user.username }}
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                            <span class="badge bg-primary">ADMINISTRATEUR</span>
                        {% elseif 'ROLE_USER' in app.user.roles %}
                            <span class="badge bg-secondary">UTILISATEUR</span>
                        {% else %}
                            <span class="badge bg-light text-dark">personne</span>
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
