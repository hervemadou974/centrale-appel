{% extends 'base.html.twig' %}

{% block title %}Commune index{% endblock %}

{% block body %}
    <h1>Commune index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code_postale</th>
                <th>Nom_commune</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commune in communes %}
            <tr>
                <td>{{ commune.codePostale }}</td>
                <td>{{ commune.nomCommune }}</td>
                <td>
                    <a href="{{ path('app_commune_show', {'id': commune.id}) }}">Regarder</a>
                    <a href="{{ path('app_commune_edit', {'id': commune.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de communes enregistr√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_commune_new') }}"class="btn btn-primary">Nouveau</a>
    <a href="{{ path('app_parametre') }}"class="btn btn-primary">Retour</a>
{% endblock %}
